<% include ./partials/header %>
  <div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">

      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="Title of Post" value="<%= blog.title %>">
      </div>

      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" placeholder="Image URL" value="<%= blog.image %>">
      </div>

      <div class="field">
        <label>Text</label>
        <textarea name="blog[body]" placeholder="Blog text" ><%= blog.body %></textarea>
      </div>

      <input class="ui violet big basic button" type="submit">
    </form>
  </div>
<% include ./partials/footer %>
